# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myapp
# For Docker: postgresql://postgres:postgres@db:5432/myapp

# Security
SECRET_KEY=your-secret-key-please-change-this-to-a-random-string-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Multi-tenancy
ENABLE_MULTI_TENANCY=true
DEFAULT_TENANT_SCHEMA=public

# Server
PROJECT_NAME=MyApp
VERSION=1.0.0
API_V1_STR=/api/v1

# Environment
ENVIRONMENT=development

# Email (Optional - for email auth)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=MyApp

# SMS (Optional - for phone auth)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Social Login (Optional)
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=["jpg","jpeg","png","gif","pdf","doc","docx"]
